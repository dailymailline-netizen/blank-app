# Stream & Upload Hub - Environment Configuration Example
# Copy this file to .env and fill in your values

# ============================================
# Storage Backend Configuration
# ============================================
# Options: "local" (default), "s3"
STORAGE_BACKEND=local

# AWS S3 Configuration (only if STORAGE_BACKEND=s3)
AWS_S3_BUCKET=my-stream-hub-bucket
AWS_REGION=us-east-1
# Optional: Use IAM role if not set
AWS_ACCESS_KEY=
AWS_SECRET_KEY=

# ============================================
# Directory Configuration
# ============================================
# Paths for local storage (used with STORAGE_BACKEND=local)
UPLOAD_DIR=./uploads
STREAMS_DIR=./streams
NOTEPAD_STORAGE_PATH=./community_notes

# ============================================
# P2P & Community Notepad
# ============================================
# Enable peer-to-peer networking for distributed note sync
P2P_ENABLED=false
P2P_NODE_NAME=stream-hub-node
P2P_PORT=6881

# Community notepad settings
COMMUNITY_NOTEPAD_ENABLED=true
NOTEPAD_AUTO_SYNC=false
NOTEPAD_MAX_SIZE_MB=100

# ============================================
# Streamlit Configuration
# ============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_LOGGER_LEVEL=info

# ============================================
# Application Settings
# ============================================
MAX_UPLOAD_SIZE_MB=500
STREAM_TIMEOUT_MINUTES=120
AUTO_CLEANUP_ENABLED=false
CLEANUP_AGE_DAYS=7

# ============================================
# NFS Configuration (for multi-instance setup)
# ============================================
# NFS server address (e.g., 192.168.1.100)
# Mount via: sudo mount -t nfs <NFS_SERVER>:/mnt/nfs/notes /data/notes
NFS_SERVER=
NFS_MOUNT_VIDEOS=/data/videos
NFS_MOUNT_NOTES=/data/notes

# ============================================
# Database (optional, for future use)
# ============================================
USE_DATABASE=false
DATABASE_PATH=./app_data.db

# ============================================
# API Configuration (optional)
# ============================================
API_ENABLED=false
API_PORT=8000
API_HOST=0.0.0.0

# ============================================
# Logging
# ============================================
ENABLE_LOGGING=true
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================
# Feature Flags
# ============================================
ENABLE_LIVE_RECORDING=true
ENABLE_VOD=true
ENABLE_TRANSCODING=false
ENABLE_ANALYTICS=true
ENABLE_USER_AUTH=false
